{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended"
        // "plugin:@typescript-eslint/recommended"
        // "plugin:prettier/recommended",
        // "prettier/@typescript-eslint"
    ],
    // "parser": "@typescript-eslint/parser",
    "plugins": [
        // "@typescript-eslint/eslint-plugin"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "root": true,
    "rules": {
        "no-unused-vars": "off"
    }
}